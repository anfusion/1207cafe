<% include ../partials/header %>


<section class="blog_heading">
	<h1>1207 Blog</h1>
	<form action="/blogs" method="GET">
		<input type="text" name="search" placeholder ="Search blogs...">
		<button>Go</button>
	</form>	<a href="/blogs/new">Write a new blog</a>


</section>
	<% if (noMatch !== null) { %>
	<span><%= noMatch %></span>
	<% } %>
<section class="cards">


	<% blogs.forEach(blog => {%>
	<div class="flex_blog_card bg1">						
		<div class="flex_blog_card_picture">
			<a href="/blogs/<%= blog._id %>" class="blog-image-center"><img class="blog-index-image" src="<%= blog.image %>"></a>
		</div>
		<div class="flex_blog_card_text ">
			<a href="/blogs/<%= blog._id %>"><h3><%=blog.title%></h3></a>
			<p><%=blog.description%></p><br>
			<p><%=blog.created.toDateString()%></p><br>
			<p>
				<a href="/blogs/<%= blog._id %>">Read blog</a>
			</p>
		</div>			
	</div>
	<% }); %>	

</section>

<% include ../partials/footer %>





