<% include ./partials/header %>
<h2 class="margin-top-and-bottom">Reset Password</h2>
<form action="/reset/<%= token %>" method="POST">
	<label for="password">Password</label>
	<input class="block" type="password" name="password" value="" placeholder="New password" required>
	<label for="confirm">Confirm Password</label>
	<input class="block" type="password" name="confirm" value="" placeholder="Confirm password" required>
	<button class="">Update password</button>	
</form>

