<!DOCTYPE html>
<html lang="en">
    <head>
        <title>1207 cafe</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
		        <link href="/images">
        
    </head>
    
    <body>
		<nav class="navbar">
			<nav class="wrapper">
				<div class="logo"><a href="/"><img src="/images/image_1207logobig_button.png"></a></div>
				<input type="checkbox" id="menu-toggle" />
				<label for="menu-toggle" class="label-toggle"></label>
				<ul>
					<li><a href="/blogs">Blog</a></li>
					<!-- if no user -->					
					<% if(!currentUser){ %>
					<li><a href="/login">Log in</a></li>
					<li><a href="register">Sign up</a></li>
					<!-- if  user -->
					<% } else { %>
						<li><a href="/users/<%= currentUser._id%>"><%= currentUser.username %>
							<% if(currentUser && currentUser.isAdmin) { %>
							<span>(admin)</span>
							<% } %>						
						</a></li>
						<li><a href="/logout">Log out</a></li>
					<% } %>
				</ul>
			</nav>
		</nav>
		
		<div class="super-container">

			<% if (error && error.length > 0) { %>
				<h2 class="blog-header-group" style="color: red"><%= error %></h2>
			<% } %>
			<% if (success && success.length > 0) { %>
				<h2 class="blog-header-group" style="color: gray"><%= success %></h2>
			<% } %>

		

