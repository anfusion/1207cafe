<% include ./partials/header %>
<h1 class="margin-top-and-bottom">Create a 1207 cafe account</h1>
<form action="/register" method="POST">
	<label for="username">Username</label>
	<input  class="block" type="text" name="username" placeholder="Enter username" required autofocus>
	<p></p>
	<label for="password">Password</label>
	<input  class="block" type="password" name="password" placeholder="Enter password" required>
	<p></p>
	<label for="firstName">First name</label>
	<input  class="block" type="text" name="firstName" placeholder="Enter first name" required>
	<p></p>
	<label for="lastName">Last name</label>
	<input  class="block" type="text" name="lastName" placeholder="Enter last name" required>
	<p></p>
	<label for="avatar">Profile pic</label>
	<input  class="block" type="text" name="avatar" placeholder="Enter profile pic url">
	<p></p>
	<label for="email">Email</label>
	<input  class="block" type="email" name="email" autofocus placeholder="Enter email" required>
	<p></p>
	<label for="adminCode">Admincode</label>
	<input  class="block" type="text" name="adminCode" placeholder="Enter admin code">
	<button class="">Sign up</button> 
</form>
<br>
<a href="/forgot">Forgot your password?</a>


<% include ./partials/footer %>
